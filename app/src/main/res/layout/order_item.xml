<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_itemCosts"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_marginTop="31dp"
        android:text="Cost"
        app:layout_constraintEnd_toStartOf="@+id/order_quantity"
        app:layout_constraintTop_toBottomOf="@+id/order_foodName" />

    <TextView
        android:id="@+id/order_foodName"
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:text="FoodName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_quantity"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="Quantity"
        app:layout_constraintEnd_toStartOf="@+id/order_subTotal"
        app:layout_constraintTop_toBottomOf="@+id/order_foodName" />

    <TextView
        android:id="@+id/order_subTotal"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Sub Total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>